@model IEnumerable<ZkhiphavaWeb.Models.Event>

@{
    ViewBag.Title = "Events";
}
    <div class="container">
        <div id="myCarousel" class="carousel slide col-md-12" style="width:900px; height:300px; margin:auto" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <h3 style="font-family:'Segoe Print'" class="text-center yellow">@Model.Where(x => x.indawoId == 9).ElementAt(0).title</h3>
                    <img style="width:900px; height:300px;" src=@Model.Where(x => x.indawoId == 9).ElementAt(0).imgPath alt="Chania">
                    <div class="carousel-caption pull-right">
                        <a href="@Url.Content(Model.Where(x => x.indawoId == 9).ElementAt(0).url)" class="btn btn-primary"> Details</a>
                        <a class="btn btn-primary" onclick="getDirections('@Model.Where(x => x.indawoId == 9).ElementAt(0).address')">Directions</a>
                        <a class="btn btn-primary"> Tickets</a>
                    </div>
                </div>

                <div class="item">
                    <h3 style="font-family:'Segoe Print'" class="text-center yellow">@Model.Where(x => x.indawoId == 9).ElementAt(1).title</h3>
                    <img style="width:900px; height:300px;" src=@Model.Where(x => x.indawoId == 9).ElementAt(1).imgPath alt="Chicago">
                    <div class="carousel-caption">
                        <a href="@Url.Content(Model.Where(x => x.indawoId == 9).ElementAt(0).url)" class="btn btn-primary"> Details</a>
                        <a class="btn btn-primary" onclick="getDirections('@Model.Where(x => x.indawoId == 9).ElementAt(0).address')">Directions</a>
                        <div class="btn btn-primary"> Tickets</div>
                    </div>
                </div>

                <div class="item">
                    <h3 style="font-family:'Segoe Print'" class="text-center yellow">@Model.Where(x => x.indawoId == 9).ElementAt(2).title</h3>
                    <img style="width:900px; height:300px;" src=@Model.Where(x => x.indawoId == 9).ElementAt(2).imgPath alt="New York">
                    <div class="carousel-caption">
                        <a href="@Url.Content(Model.Where(x => x.indawoId == 9).ElementAt(0).url)" class="btn btn-primary"> Details</a>
                        <a class="btn btn-primary" onclick="getDirections('@Model.Where(x => x.indawoId == 9).ElementAt(0).address')">Directions</a>
                        <div class="btn btn-primary"> Tickets</div>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        
    </div>
    <br />
    <br />

    <div class="col-md-4">
        @foreach (var item in Model.Where(x => x.indawoId != 9))
        {
            <div class="card" style="width: 50rem;">
                <h3 style="font-family:'Segoe Print'" class="yellow">@item.title.ToUpper()</h3>
                <img style="width:300px; height: 200px;" src=@item.imgPath class="card-img-top" alt="...">
                <div class="card-body">
                    <a href="@Url.Content(Model.Where(x => x.indawoId == 9).ElementAt(0).url)" class="btn btn-primary"> Destails</a>
                    <a class="btn btn-primary" onclick="getDirections('@Model.Where(x => x.indawoId == 9).ElementAt(0).address')">Directions</a>
                    <a class="btn btn-primary"> Tickets</a>
                </div>
            </div>
        }
    </div>




<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    function getDirections(address) {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function (position) {
                window.location.href = 'https://maps.google.com/maps?saddr=' +
                    position.coords.latitude.toString() + ', ' + position.coords.longitude.toString() + '&daddr=' + encodeURIComponent(address);
            });
        } else {
            x.innerHTML = "Geolocation is not supported by this browser.";
        }
    }

</script>

